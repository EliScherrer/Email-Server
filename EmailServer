	public String addUser(String[] args) {
		String username = args[1];
		String password = args[2];
		int nameCheck = checkUserPass(username, password);
		if (nameCheck == -1) {
			return "the name check is fucked";
		}
		else if (nameCheck == 0 || nameCheck == 2) {
			return "FAILURE" + DELIMITER + "-22" + DELIMITER + ErrorFactory.makeErrorMessage(-22, "same name") + CRLF;
		}
		else if (nameCheck == 1) {
			if (username.length() < 1 || username.length() > 20 || password.length() < 4 || password.length() > 40) {
				return "FAILURE" + DELIMITER + "-23" + DELIMITER + ErrorFactory.makeErrorMessage(-23, "username or password don't work") + CRLF;
			}
			//todo this is fucked i need to fix this 
			else {
				User u = new User(args[0], args[1]);
				User[] usersTemp = Arrays.copyOf(users, users.length * 2);
				for (int i = 0; i < usersTemp.length; i++) {
					if (usersTemp[i] == null) {
						usersTemp[i] = u;
					}
				}
				users = usersTemp;

				return SUCCESS;
			}
		}



		return "add user is fucked somewhere";
	}
	public String getAllUsers(String[] args) {
		String username = args[1];
		String password = args[2];
		int nameCheck = checkUserPass(username, password);
		if (nameCheck == -1) {
			return "the name check is fucked";
		}
		else if (nameCheck == 1) {
			return "FAILURE" + DELIMITER + "-20" + DELIMITER + ErrorFactory.makeErrorMessage(-20, "wrong name") + CRLF;
		}
		else if (nameCheck == 2) {
			return "FAILURE" + DELIMITER + "-21" + DELIMITER + ErrorFactory.makeErrorMessage(-21, "wrong pass") + CRLF;
		}
		else if (nameCheck == 0) {
			String names = "";
			for (int i = 0; i < numUsers ; i++) {
				names = names + DELIMITER + users[i].getName();
			}
			return SUCCESS + names + CRLF;
		}
		return "its done fucked";
	}
	public String deleteUser(String[] args) {
		String username = args[1];
		String password = args[2];
		int nameCheck = checkUserPass(username, password);
		if (nameCheck == -1) {
			return "the name check is fucked";
		}
		else if (nameCheck == 1) {
			return "FAILURE" + DELIMITER + "-20" + DELIMITER + ErrorFactory.makeErrorMessage(-20, "wrong name") + CRLF;
		}
		else if (nameCheck == 2) {
			return "FAILURE" + DELIMITER + "-21" + DELIMITER + ErrorFactory.makeErrorMessage(-21, "wrong pass") + CRLF;
		}
		else if (nameCheck == 0) {
			if (username.equals("root")) {
				return "FAILURE" + DELIMITER + "-23" + DELIMITER + ErrorFactory.makeErrorMessage(-23, "tryna remove root") + CRLF;
			}
			else {
				for (int i = 0; i < numUsers; i++) {
					if (users[i].getName().equals(username)) {
						users[i] = null;
						//todo shift the array??
						numUsers--;
						return "SUCCESS\r\n";
					}
				}
				return "idk, i guess the name was right, but now it isnt??";
			}


		}
		return "its done fucked";
	}
